<!-- NAVIGATION -->
<nav class="navbar navbar-inverse">
  <div class="container-fluid">

    <!-- HEADER -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <!-- Brand -->
      <a class="navbar-brand brand" href="{% url 'home' %}" title="Bet on famous streamers"><span class="gold">STREAM</span>BET</a>
    </div><!-- nav header -->

    <!-- LINKS -->
    <div class="collapse navbar-collapse " id="navbar">
      <!-- links -->
      <ul class="nav navbar-nav">
        <li {% block streamers %}{% endblock %} ><a href="{% url 'lolbet:stream-wall' %}">
          <i class="hidden-xs fa fa-video-camera fa-lg"></i><i class="pull-right visible-xs fa fa-video-camera fa-lg" style="padding-top:4px"></i> Streamers
        </a></li>
        <li {% block ranking %}{% endblock %} ><a href="{% url 'lolbet:ranking' %}">
          <i class="hidden-xs fa fa-trophy fa-lg"></i><i class="pull-right visible-xs fa fa-trophy fa-lg" style="padding-top:4px"></i> Ranking
        </a></li>
        <li {% block nav-contact %}{% endblock %} ><a href="{% url 'contact' %}">
          <i class="hidden-xs fa fa-envelope fa-lg"></i><i class="pull-right visible-xs fa fa-envelope fa-lg" style="padding-top:4px"></i> Contact
        </a></li>
      </ul>

    <!-- USER -->
    <hr class="visible-xs" style="margin:5px">
    {% if not user.is_authenticated %}
      <!-- Login and signup on normal screen -->
      <ul class="nav navbar-nav navbar-right hidden-xs">
        <li><button class="btn navbar-btn btn-signup" onclick="location.href='{% url 'register:signup' %}';" style="margin-right:8px"><i class="fa fa-user-plus fa-lg"></i> Sign Up</button></li>
        <li><button class="btn navbar-btn btn-login" onclick="location.href='{% url 'register:login' %}';"><i class="fa fa-sign-in fa-lg"></i> Login</button></li>
      </ul>
      <!-- Login and signup on small screen -->
      <ul class="list-inline text-center visible-xs">
        <li><button class="btn navbar-btn btn-signup" onclick="location.href='{% url 'register:signup' %}';" style="margin-right:8px"><i class="fa fa-user-plus fa-lg"></i> Sign Up</button></li>
        <li><button class="btn navbar-btn btn-login" onclick="location.href='{% url 'register:login' %}';"><i class="fa fa-sign-in fa-lg"></i> Login</button></li>
      </ul>
      {% else %}
      <!-- User informations on normal screen -->
      <ul class="nav navbar-nav navbar-right hidden-xs">
        <!-- Name -->
        <li class="dropdown nav-dropdown"><a class="dropdown-toggle dropdown-username" data-toggle="dropdown" href="#">
          <span class="username">
            {{ user.profil.name }} 
          </span>
          <span class="pull-right" style="height:30px;">
            <img src="{% static 'lolbet/img/rank/'|add:user.profil.division|add:'.png' %}" width="30" alt="rank"> 
            <i class="fa fa-caret-down"></i>
          </span></a>
          <!-- Links -->
          <ul class="dropdown-menu dropdown-menu-inverse">
            <li {% block profil %}{% endblock %}>
              <a href="{% url 'register:profil' %}"><i class="pull-right fa fa-user fa-lg" style="padding-top:3px"></i>Profil</a>
            </li>
            <li>
              <a href="{% url 'register:logoff' %}"><i class="pull-right fa fa-sign-out fa-lg" style="padding-top:3px"></i>Log off</a>
            </li>
          </ul>
        </li>
      </ul>
      <!-- User informations on small screen -->
      <!-- Name -->
      <p class="navbar-text visible-xs text-center" style="font-weight:bold;">
        {{ user.profil.name }}
        <img src="{% static 'lolbet/img/rank/'|add:user.profil.division|add:'.png' %}" width="30" alt="rank"> 
      </p>
      <hr class="visible-xs" style="margin:5px">

      <!-- Links -->
      <ul class="nav navbar-nav navbar-right visible-xs">
        <li {% block profil.m %}{% endblock %}>
          <a href="{% url 'register:profil' %}">Profil <i class="pull-right fa fa-user fa-lg" style="padding-top:3px"></i></a>
        </li>
        <li>
          <a href="{% url 'register:logoff' %}">Log off <i class="pull-right fa fa-sign-out fa-lg" style="padding-top:3px"></i></a>
        </li>
      </ul>
      {% endif %}

    </div><!-- nav content -->

  </div><!-- Container Fluid -->
</nav>

